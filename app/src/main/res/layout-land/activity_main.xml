<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scrollbars="vertical"
    android:background="@color/colorFondo"
    tools:context="org.app.dechar.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHARADAS BIBLICA"
                android:textSize="@dimen/boton_42"
                android:gravity="center_horizontal"
                android:textColor="@color/fondo5"
                android:paddingTop="@dimen/padding_8"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¡Selecciona una categoria y diviertete!"
                android:textSize="@dimen/letra_18"
                android:gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:padding="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llVericulos"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnCualquiera"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/aleatorio"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Cualquiera"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llHistorias"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnPalabra"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/comilla"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Palabras"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llNuevo"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnNuevo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/editar"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Otras"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llPresentacion"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAyuda"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="@dimen/letra_24"
                                android:textStyle="bold"
                                android:textColor="@color/fondo5"
                                android:paddingBottom="@dimen/padding_8"
                                android:text="Ayuda"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llPersonaje"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnPersonaje"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/usuario"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Personaje"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llCualquiera"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnActualo"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/personas"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Actualo"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llAyuda"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="4dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvAplicacion"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal|center_vertical"
                                android:textSize="@dimen/letra_24"
                                android:textColor="@color/fondo5"
                                android:textStyle="bold"
                                android:paddingBottom="@dimen/padding_8"
                                android:text="Aplicación"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/llLugares"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnLugares"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/marcadors"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Lugares"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llLibros"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimaryDark"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnLibros"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/biblias"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Libros"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTodos"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="8dp"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/btnTodos"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_margin="@dimen/padding_8"
                            android:background="@drawable/simbolos"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:textSize="@dimen/letra_20"
                            android:textColor="@color/fondo5"
                            android:paddingBottom="@dimen/padding_8"
                            android:text="Todos"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlAyuda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_16"
        android:visibility="gone"
        android:background="@color/colorFondo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnAyudaJugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/fondo5"
                android:textSize="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_16"
                android:text="¿Cómo Jugar?"/>
            <Button
                android:id="@+id/btnAyudaNueva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/fondo5"
                android:textSize="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_16"
                android:text="¿Cómo Agregar Categoria?"/>
            <Button
                android:id="@+id/btnAydaEditar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/fondo5"
                android:textSize="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_16"
                android:text="¿Cómo Editar Categoria?"/>
            <Button
                android:id="@+id/btnAyudaRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/fondo5"
                android:textSize="@dimen/padding_16"
                android:text="Regresar"/>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlAplicacion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_16"
        android:visibility="gone"
        android:background="@color/colorFondo">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnAplicacionTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/fondo5"
                android:textSize="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_16"
                android:text="Tiempo de Partida"/>
            <Button
                android:id="@+id/btnAplicacionDesarrollador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/fondo5"
                android:textSize="@dimen/padding_16"
                android:layout_marginBottom="@dimen/padding_16"
                android:text="Desarrollador"/>
            <Button
                android:id="@+id/btnAplicacionRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textColor="@color/fondo5"
                android:textSize="@dimen/padding_16"
                android:text="Regresar"/>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
