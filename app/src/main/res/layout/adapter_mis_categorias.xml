    android:layout_height="match_parent"
    android:padding="@dimen/padding_8"
    android:orientation="horizontal">
    <TextView
        android:layout_width="@dimen/tamaño_64"
        android:layout_height="@dimen/tamaño_64"
        android:background="@drawable/circ_fondo"
        android:id="@+id/tvNumeroList"
        android:layout_marginRight="9dp"
        android:text="1"
        android:textSize="@dimen/letra_20"
