<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/colorFondo"
    tools:context="org.app.dechar.ResultadoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/padding_8"
            android:background="@color/colorAcertar"
            android:textSize="@dimen/letra_20"
            android:text="Reiniciar"/>
        <Button
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding_8"
            android:textSize="@dimen/letra_20"
            android:background="@color/colorErrar"
            android:text="MenÃº"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/tvAcertadas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_8"
            android:layout_margin="@dimen/padding_8"
            android:textSize="@dimen/letra_24"
            android:textColor="@color/fondo5"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Acertadas: 0"/>
        <TextView
            android:id="@+id/tvErradas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/padding_8"
            android:layout_margin="@dimen/padding_8"
            android:gravity="center_horizontal"
            android:textSize="@dimen/letra_24"
            android:textColor="@color/fondo5"
            android:textStyle="bold"
            android:text="Erroneas: 0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <ListView
            android:id="@+id/lvListaAcertada"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/fondo5"
            android:layout_marginRight="@dimen/padding_8"
            android:layout_weight="1">

        </ListView>
        <ListView
            android:id="@+id/lvListaErradas"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/fondo5"
            android:layout_marginLeft="@dimen/padding_8"
            android:layout_weight="1">

        </ListView>

    </LinearLayout>


</LinearLayout>
