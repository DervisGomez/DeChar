<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivTextoTexto"
        android:layout_width="@dimen/icono"
        android:layout_height="@dimen/icono"
        android:paddingTop="@dimen/padding_8"
        android:paddingBottom="@dimen/padding_8"
        android:paddingLeft="@dimen/padding_8"
        android:src="@drawable/correcto"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvTextoTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del Servicio"
                android:minLines="1"
                android:maxLines="1"
                android:gravity="center_horizontal"
                android:textSize="@dimen/letra_20"/>
        </LinearLayout>
    </LinearLayout>